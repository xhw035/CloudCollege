<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:background="#f2f2f2"
    android:clickable="true"
    card_view:cardBackgroundColor="#757575"
    card_view:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    card_view:cardMaxElevation="8dp"
    card_view:contentPadding="0dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    >

    <com.xiao.magictimeline.SwipeDragLayout
        android:id="@+id/swipeDragLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        app:click_to_close="true"
        app:ios="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/dwonload"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_download_green"
                android:src="@drawable/child_download"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >

            <!--<ImageView
                android:id="@+id/iv_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bg_edit"
                android:scaleType="centerInside"
                android:src="@drawable/child_edit"/>-->

            <TextView
                android:id="@+id/vidoeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/vidoeTime"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </RelativeLayout>
    </com.xiao.magictimeline.SwipeDragLayout>
</android.support.v7.widget.CardView>
