                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/type_science"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/typeView6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <cn.carbs.android.avatarimageview.library.AvatarImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar6"
                android:layout_width="@dimen/course_type_item_width"
                android:layout_height="@dimen/course_type_item_width"
                android:layout_gravity="center_horizontal"
                app:aiv_BoarderWidth="0dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.4"/>

            <TextView
                android:layout_width="@dimen/course_type_item_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/course_type_item_marginTop"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/type_engineering"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/typeView7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <cn.carbs.android.avatarimageview.library.AvatarImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar7"
                android:layout_width="@dimen/course_type_item_width"
                android:layout_height="@dimen/course_type_item_width"
                android:layout_gravity="center_horizontal"
                app:aiv_BoarderWidth="0dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.4"/>

            <TextView
                android:layout_width="@dimen/course_type_item_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/course_type_item_marginTop"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/type_examination"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/typeView8"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <cn.carbs.android.avatarimageview.library.AvatarImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar8"
                android:layout_width="@dimen/course_type_item_width"
                android:layout_height="@dimen/course_type_item_width"
                android:layout_gravity="center_horizontal"
                app:aiv_BoarderWidth="0dp"
                app:aiv_ShowBoarder="false"
                app:aiv_TextSizeRatio="0.4"/>

            <TextView
                android:layout_width="@dimen/course_type_item_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/course_type_item_marginTop"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/type_other"
            />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>